  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (type in script name)",
      "cwd": "${workspaceFolder}",
      "program": "${command:AskForScriptName}",
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (select script from list of sh files)",
      "cwd": "${workspaceFolder}",
      "program": "${command:SelectScriptName}",
      "args": []
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv image pull)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "image",
        "pull",
        "/tmp/vedv/test/files/alpine-x86_64.ova"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv container create)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "container",
        "create",
        "--name",
        "dyli-amoroso",
        "large-gull"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv container stop)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "container",
        "stop",
        "dyli-amoroso1",
        "dyli-amoroso",
        "/tmp/vedv/test/files/alpine-x86_64.ova"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv container rm)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "container",
        "rm",
        "dyli-amoroso"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv container ls)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "container",
        "ls"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv image remove-cache)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "image",
        "remove-cache"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv image rm)",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "image",
        "rm",
        "alpine-x86_64"
      ]
    },
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash-Debug (vedv image build)",
      "cwd": "${workspaceFolder}/dist/test/lib/vedv/components/image/fixtures/vedvfiles",
      "env": {
        "VEDV_HADOLINT_ENABLED": "false"
      },
      "program": "${workspaceFolder}/dist/bin/vedv",
      "args": [
        "image",
        "build"
      ]
    }
  ]
}
