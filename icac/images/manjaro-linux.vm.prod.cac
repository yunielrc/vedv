#!/usr/bin/env sh

# Configure the alpine linux image vm for vedv

set -eu

# INSTALL PACKAGES

# INSTALL OPENSSH
pacman -Sy --noconfirm --needed openssh
# configure sshd
systemctl enable --now sshd.service

# INSTALL RSYNC
pacman -Sy --noconfirm --needed rsync
# configure rsyncd
systemctl enable --now rsyncd.service
